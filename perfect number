#include <stdio.h>
void main()
{
    int n,i,r,s=0;
    printf("enter any number:");
    scanf("%d",&n);
    for(i=1;i<n;i++)
    {
        r=n%i;
        if(r==0)
         s=s+i;
    }
    if(s==n)
      printf("The given number is a perfect number");
    else
      printf("The given number is not a perfect number");
     
}
