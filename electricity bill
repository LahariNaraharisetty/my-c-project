#include <stdio.h>
void main() 
{
    int u;
    float total=0;
    printf("Enter electricity units consumed:");
    scanf("%d",&u);
    if (u>0) 
   {
        if (u<=50) 
            total=u*0.50;
        else if (u<=150) 
            total=25+(u-50)*0.75;
        else if (u<=250) 
            total=25+75+(u-150)*1.20;
        else 
            total=25+75+120+(u-250)*1.50;
        printf("\nTotal electricity bill: Rs.%f",total);
    }
    else 
        printf("Invalid input.");
}
