#include <stdio.h>
#include<math.h>
void main()
{
    int a,b,c,d,r1,r2;
    printf("enter a,b and c values of a quadratic equation:");
    scanf("%d%d%d",&a,&b,&c);
    d=(b*b)-(4*a*c);
    r1=(-b+sqrt(d))/(2*a);
    r2=(-b-sqrt(d))/(2*a);
    printf("%d",d);
    if(d>0)
      printf("\nRoots are real \nr1=%d , r2=%d",r1,r2);
    else if(d==0)
      printf("\nRoots are real and equal \nr1=%d , r2=%d",r1,r2);
    else
      printf("\nRoots are imaginary");
}
